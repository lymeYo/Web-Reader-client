<style is:global>
	:root {
		--main-bg-color: #ebe2c9;
		--text-color: #000000;
		--dark-main-bg-color: #131313;
		--dark-text-color: #ffffff;
		--second-color: #005c75;
		--main-dim-color: rgb(113, 113, 113);
		--body-padding-bottom: 10px;
	}
	html,
	body {
		padding: 0;
		margin: 0;
		font-family: cursive;
	}
	body {
		padding: 0 0 var(--body-padding-bottom) 0;
	}
	h1, h2, h3, h4, h5, h6, p {
    font-size: inherit;
		font-weight: inherit;
		line-height: inherit;
		margin: 0;
		padding: 0;
	}
	a {
		color: inherit;
		text-decoration: none;
	}
	input {
		outline: none;
		border: none;
		font-family: cursive;
	}
	ul {
		list-style-type: none;
		margin: 0;
		padding: 0;
	}
	li {
		list-style-type: none;
	}
	p {
		padding: 0;
		margin: 0;
	}
	button {
		outline: none;
		border: none;
		background-color: transparent;
		cursor: pointer;
		margin: 0;
		padding: 0;
	}
	button:active {
		border: none;
	}

	/* настройки для темной темы */	
	@media (prefers-color-scheme: dark) {
		body {
			background-color: var(--dark-main-bg-color);
			color: var(--dark-text-color);
		}
	}

	[data-theme="dark"] {
		background-color: var(--dark-main-bg-color);
		color: var(--dark-text-color);
	}
	
	[data-theme="light"] {
		background-color: var(--main-bg-color);
		color: #000;
	}
</style>
